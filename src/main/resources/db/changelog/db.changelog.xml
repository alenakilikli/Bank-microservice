<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="java.couchpotato">

        <createTable tableName="accounts">
            <column name="id" type="varchar" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="country" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_id" type="bigint">
                <constraints foreignKeyName="FK_ACCOUNT_ACCOUNT_ID_TRANSACTION_ID"
                             referencedTableName="transactions"
                             referencedColumnNames="id"/>
            </column>
            <column name="creation_date" type="DATETIME" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <createTable tableName="transactions">
            <column name="id" type="varchar" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>


        </createTable>
    </changeSet>
</databaseChangeLog>